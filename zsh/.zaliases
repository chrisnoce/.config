# Aliases Database

# Mac Directory Commands
if [[ "$OSTYPE" == "darwin"* ]]; then
alias ll='ls -laG'
alias ls='ls -G'
alias l='ls -lG'
fi

# Linux Directory Commands
if [[ "$OSTYPE" == "linux"* ]]; then
alias ll='ls -la --color'
alias ls='ls --color'
alias l='ls -l --color'
fi

# Config
alias zshconfig='vim ${ZDOTDIR}/.zshrc'
alias vimconfig='vim ~/.config/vim/.vimrc'
alias consoleconfig='sudo dpkg-reconfigure console-setup'
alias tmuxconfig='vim ~/.config/tmux/tmux.conf'
alias i3config='vim ~/.config/i3/config'

# Utility
alias zshreset='source ${ZDOTDIR}/.zshrc'
alias git='HOME=~/.config/git/ git'
